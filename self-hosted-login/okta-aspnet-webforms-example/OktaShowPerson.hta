<!doctype html>
<html>
<head>
<title>Okta - Show Person</title>
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<style type="text/css">
body, pre {
    font-family: Arial, sans-serif;
    font-size: 10pt;
}
</style>
</head>
<body>
<form>
<input id="user" value="me">
<button type="submit">Go</button>
</form>
<br>
<div id="results"></div>
<script src="oktaAPIsettings.js"></script>
<script src="oktaAPI.js"></script>
<script>
var results = document.getElementById("results");

document.forms[0].onsubmit = function () {
    getUser(showUser, document.getElementById("user").value);
    return false; // Cancel form.submit.
};

function showUser() {
    results.innerHTML = "<pre>" + toString(JSON.parse(this.responseText)) + "</pre>";
}
</script>
</body>
</html>
